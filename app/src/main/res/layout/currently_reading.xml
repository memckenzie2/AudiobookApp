<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondaryLight"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:paddingBottom="4dp">


        <Button
            android:id="@+id/home_nav"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/book_stack_from_pixabay_nav"
            android:paddingTop="4dp"
            android:text="HOME"
            android:textStyle="bold" />

        <Button
            android:id="@+id/current_nav"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/reading_from_pixabay_nav"
            android:text="Currently Reading"
            android:textSize="8sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/shelf_nav"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/small_stack_from_pixabay_nav"
            android:paddingTop="8dp"
            android:text="Bookshelf"
            android:textSize="8sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/discover_nav"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:drawableTop="@drawable/book_w_lamp_from_pixabay_nav"
            android:paddingTop="12dp"
            android:text="Discover"
            android:textSize="8sp"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:id="@+id/book_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Book Title"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="@font/crimson_text" />

    <TextView
        android:id="@+id/author_current"
        style="@style/emphasisText"
        android:gravity="center"
        android:text="TextView"
        app:fontFamily="@font/crimson_text_italic"/>

    <TextView
        android:id="@+id/narrator_current"
        android:gravity="center"
        android:text="TextView"
        style="@style/italicText"
        app:fontFamily="@font/crimson_text_italic"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="384dp"
        android:layout_height="176dp"
        android:layout_margin="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:src="@drawable/book_cover_from_pixabay" />

    <TextView
        android:id="@+id/chapterNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chapter 1"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:fontFamily="@font/crimson_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorSecondaryDark"
            app:srcCompat="@android:drawable/ic_media_previous" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorSecondaryDark"
            app:srcCompat="@android:drawable/ic_media_rew" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/colorPrimaryLight"
            app:srcCompat="@android:drawable/ic_media_play" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorSecondaryDark"
            app:srcCompat="@android:drawable/ic_media_ff" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorSecondaryDark"
            app:srcCompat="@android:drawable/ic_media_next" />

    </LinearLayout>

    <SeekBar
        android:id="@+id/seekBar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="0:00"
        android:textColor="@android:color/black"
        app:fontFamily="@font/crimson_text" />

</LinearLayout>