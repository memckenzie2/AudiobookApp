<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_option"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary">



    <TextView
        android:id="@+id/book_current"
        style="@style/emphasisText"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimaryLight"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:text="Title"
        android:textColor="@color/textLight"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="@font/crimson_text_bold" />

    <TextView
        android:id="@+id/author"
        style="@style/emphasisText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_current"
        android:paddingLeft="8dp"
        android:text="Written by Author's Name"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/narrator"
        android:text="Narrated by Narrator's Name"
        android:layout_alignParentStart="true"
        app:fontFamily="@font/crimson_text_italic"
        style="@style/italicText"
        android:layout_below= "@+id/author"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/length"
        app:fontFamily="@font/crimson_text_italic"
        style="@style/italicText"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/narrator"
        android:text="Narration Length: 12:00:00"
        tools:ignore="RtlCompat" />


        = />

    <Button
        android:id="@+id/play"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/book_current"
        android:background="@android:drawable/picture_frame"
        android:drawablePadding="2dp"
        android:drawableTop="@android:drawable/ic_media_play"
        android:gravity="bottom|center"
        android:padding="4dp"
        android:text="Play\n"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="8sp"
        android:textStyle="bold"
        android:focusable="false"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/add_bookshelf"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_below="@+id/book_current"
        android:layout_toStartOf="@+id/play"
        android:background="@android:drawable/picture_frame"
        android:drawableTop="@android:drawable/ic_menu_add"
        android:gravity="bottom|center"
        android:padding="4dp"
        android:text="Bookshelf\n"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="8sp"
        android:textStyle="bold"
        android:focusable="false"
        tools:ignore="RtlCompat" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/length"
        android:background="?android:attr/listDivider"
        android:visibility="visible"
        tools:ignore="RtlCompat" />


</RelativeLayout>