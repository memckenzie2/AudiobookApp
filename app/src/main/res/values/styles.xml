<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mainOption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:textSize">@dimen/main_title</item>
        <item name="android:fontFamily">@font/crimson_text</item>
    </style>

    <style name="mainOptionImage">
        <item name="android:layout_width">@dimen/image_width</item>
        <item name="android:layout_height">@dimen/image_height</item>
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="optionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/tiny_padding</item>
        <item name="android:paddingBottom">@dimen/tiny_padding</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="emphasisText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/crimson_text</item>
        <item name="android:textSize">@dimen/med_text</item>
        <item name="android:paddingLeft">@dimen/med_padding</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="italicText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/tiny_padding</item>
        <item name="android:paddingLeft">@dimen/med_padding</item>
        <item name="android:textSize">@dimen/med_text</item>
        <item name="android:fontFamily">@font/crimson_text_italic</item>
    </style>

    <style name="menu_button">
        <item name="android:layout_width">@dimen/menu_width</item>
        <item name="android:layout_height">@dimen/menu_height</item>
        <item name="android:layout_margin">@dimen/med_padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="title_textview" parent="emphasisText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:paddingBottom">@dimen/tiny_padding</item>
        <item name="android:paddingLeft">@dimen/med_padding</item>
        <item name="android:paddingTop">@dimen/med_padding</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="play_button">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@android:drawable/picture_frame</item>
        <item name="android:drawablePadding">@dimen/tiny_padding</item>
        <item name="android:drawableTop">@android:drawable/ic_media_play</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:padding">@dimen/tiny_padding</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="add_book_button">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:background">@android:drawable/picture_frame</item>
        <item name="android:drawableTop">@android:drawable/ic_menu_add</item>
        <item name="android:focusable">false</item>
        <item name="android:gravity">bottom|center</item>
        <item name="android:padding">@dimen/tiny_padding</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="divider_style_element">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tiny_padding</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_below">@+id/length</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="nav_menu_opt" parent="menu_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="menu_opt_list_item" parent="mainOption">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="menu_opt_image_item" parent="mainOptionImage">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="title_reading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="book_cover">
        <item name="android:layout_width">384dp</item>
        <item name="android:layout_height">176dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_marginEnd">@dimen/med_padding</item>
        <item name="android:layout_marginLeft">@dimen/med_padding</item>
        <item name="android:layout_marginRight">@dimen/med_padding</item>
        <item name="android:layout_marginStart">@dimen/med_padding</item>
        <item name="android:cropToPadding">false</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="chapter_reading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/med_text</item>
    </style>

    <style name="play_opt_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorSecondaryDark</item>
    </style>

    <style name="press_play_opt_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="time_reading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


</resources>
